#!/bin/bash
branch=$(git rev-parse --abbrev-ref HEAD)

if [ "$branch" = "main" ]; then
    echo "Merge completed into main branch."

    # Log details to merge.log
    echo "Merge into main completed on $(date)" >> merge.log
    echo "Latest commit: $(git log -1 --oneline)" >> merge.log
    echo "------------------------------------" >> merge.log
fi









